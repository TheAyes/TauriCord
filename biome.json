{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"useEditorconfig": true,
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"useDateNow": "error",
				"useArrowFunction": "error",
				"noForEach": "error"
			},
			"style": {
				"useSelfClosingElements": "warn"
			},
			"correctness": {
				"noConstAssign": "error",
				"noSelfAssign": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "none"
		}
	}
}
