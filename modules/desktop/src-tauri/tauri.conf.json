{
	"$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "desktop",
	"version": "0.1.0",
	"identifier": "com.tauri.dev",
	"build": {
		"frontendDist": "..",
		"devUrl": "http://localhost:3000",
		"beforeDevCommand": "bun run dev",
		"beforeBuildCommand": "bun run build"
	},
	"app": {
		"windows": [
			{
				"label": "splash",
				"resizable": false,
				"decorations": false,
				"url": "/splash",
				"width": 300,
				"height": 350.0,
				"center": true
			},
			{
				"label": "main",
				"visible": false,
				"title": "TauriCord",
				"resizable": true,
				"maximized": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
	}
}
